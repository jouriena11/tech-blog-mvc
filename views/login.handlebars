<div id="login-form" class="row">
    <form class="offset-1 col-10 offset-lg-3 col-lg-6">
        <div class="bg-black px-3 py-2 rounded-1 mb-3">
            <h2 class="text-white">Login</h2>
        </div>
        <div class="mb-3 mx-1">
            <label for="login-username-input" class="form-label">Username</label>
            <input type="email" class="form-control" id="login-username-input" aria-describedby="emailHelp">
        </div>
        <div class="mb-3 mx-1">
            <label for="login-password-input" class="form-label">Password</label>
            <input type="password" class="form-control" id="login-password-input">
        </div>
        <button type="submit" class="btn btn-primary mx-1">Submit</button>
        <div id="emailHelp" class="form-text mx-1">Sign up instead</div>
    </form>
</div>